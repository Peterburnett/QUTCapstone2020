<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="admin/tool/paymentplugin/db">

    <TABLES>
        <TABLE NAME="tool_paymentplugin" COMMENT="Table to store course payment settings">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="course id"/>
