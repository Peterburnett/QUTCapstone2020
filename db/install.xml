<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="admin/tool/paymentplugin/db" VERSION="20200915" COMMENT="XMLDB file for Moodle admin/tool/paymentplugin"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="tool_paymentplugin_course" COMMENT="Default comment for tool_paymentplugin, please edit me">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="20" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="cost" TYPE="int" LENGTH="5" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="id" TYPE="primary" FIELDS="id"/>
        <KEY NAME="courseid" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="tool_paymentplugin_purchases" COMMENT="Log of all purchases">
      <FIELDS>
        <FIELD NAME="purchase_id" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="payment_type" TYPE="char" LENGTH="256" NOTNULL="true" DEFAULT="Unknown" SEQUENCE="false"/>
        <FIELD NAME="userid" TYPE="char" LENGTH="256" NOTNULL="true" DEFAULT="Unknown" SEQUENCE="false"/>
        <FIELD NAME="amount" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="date" TYPE="char" LENGTH="256" NOTNULL="true" DEFAULT="Unknown" SEQUENCE="false"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="20" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="purchase_id"/>
        <KEY NAME="userid_foreign" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="courseid_foreign" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>